<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hardextech.store">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_store_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_store_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Store">
        <activity
            android:name=".ui.activities.ui.activities.CartListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ui.activities.DashboardProductDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ui.activities.ProductDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.ui.activities.AddProductActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ui.activities.SettingActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ui.activities.DashboardActivity"
            android:exported="false"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activities.ui.activities.UserProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ui.activities.ForgotPasswordActivity"
            android:exported="true"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.activities.ui.activities.BaseActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activities.ui.activities.RegisterActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ui.activities.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.activities.ui.activities.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ui.activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>