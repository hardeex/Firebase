<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ui.activities.SplashScreenActivity">


    <ImageView
        android:id="@+id/jards_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/jards_logo"
        app:layout_constraintBottom_toTopOf="@+id/tvBuyNSell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.hardextech.store.utils.MyCustomTextView
        android:id="@+id/tvBuyNSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jards_logo"
        android:layout_centerHorizontal="true"
        android:text="BUY &amp; SELL"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>